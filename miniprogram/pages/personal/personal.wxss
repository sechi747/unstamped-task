
button::after{
  border-radius: 0;
  border: none;
}

/* 用户信息区域 */
.userInfoContainer {
  position: relative;
  background: linear-gradient(to bottom, #a0adb8, #eef2f3);
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  box-shadow: 14rpx 14rpx 18rpx #bdc3c7;
}

.avatar {
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.usernameContainer {
  position: absolute;
  top: 70rpx;
  right: 330rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.username {
  /* position: absolute;
  top: 60rpx;
  right: 400rpx; */
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
}

.count {
  /* position: absolute;
  top: 130rpx;
  right: 320rpx;
  display: inline-block; */
  line-height: 40rpx;
  height: 40rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  border: 1px solid #777bce;
  border-radius: 14rpx;
  color: #777bce;
}

/* 意见反馈区域 */
.feedbackContainer {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 140rpx;
  background-color: #ecf3f5;
  border-radius: 40rpx;
  box-shadow: 14rpx 14rpx 18rpx #bdc3c7;
}

.feedback {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
  height: 100%;
  background-color: #ecf3f5;
}


.feedback-title {
  font-size: 22rpx;
  color: #868e96;
}

.contact {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
  height: 100%;
  background-color: #ecf3f5;
}

.contact-title {
  font-size: 22rpx;
  color: #868e96;
}

.share {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 200rpx;
  height: 100%;
  background-color: #ecf3f5;
}

.share-title {
  font-size: 22rpx;
  color: #868e96;
}